{
  "info": {
    "name": "Policy 기반 권한 관리 API v2 (버전 관리)",
    "description": "Policy 자동 버전 관리 포함",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "policyId",
      "value": "",
      "type": "string"
    },
    {
      "key": "stateId",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "1. Policy (버전 관리)",
      "item": [
        {
          "name": "Policy 생성 (v1)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.json().success) {",
                  "    pm.collectionVariables.set('policyId', pm.response.json().data.id);",
                  "    console.log('Policy ID:', pm.response.json().data.id);",
                  "    console.log('Version:', pm.response.json().data.version);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"문서 결재 정책\",\n  \"description\": \"초기 버전 (v1)\",\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/policies",
              "host": ["{{baseUrl}}"],
              "path": ["api", "policies"]
            }
          }
        },
        {
          "name": "Policy 새 버전 생성 (v2)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"문서 결재 정책\",\n  \"description\": \"개선된 버전 (v2)\",\n  \"newVersion\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/policies",
              "host": ["{{baseUrl}}"],
              "path": ["api", "policies"]
            }
          }
        },
        {
          "name": "Policy 목록 (최신 버전만)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/policies?latestVersion=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "policies"],
              "query": [
                {
                  "key": "latestVersion",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Policy 수정 (버전 업 없음)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"설명만 수정\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/policies/{{policyId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "policies", "{{policyId}}"]
            }
          }
        },
        {
          "name": "Policy 수정 (새 버전 생성)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"대폭 수정\",\n  \"createNewVersion\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/policies/{{policyId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "policies", "{{policyId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "2. State (수동 버전 관리)",
      "item": [
        {
          "name": "State 추가 (버전 변경 없음)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.json().success) {",
                  "    pm.collectionVariables.set('stateId', pm.response.json().data.id);",
                  "    console.log('State ID:', pm.response.json().data.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"policyId\": \"{{policyId}}\",\n  \"name\": \"Review\",\n  \"description\": \"검토 단계\",\n  \"order\": 3,\n  \"isInitial\": false,\n  \"isFinal\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/states",
              "host": ["{{baseUrl}}"],
              "path": ["api", "states"]
            }
          }
        },
        {
          "name": "State 삭제 (버전 변경 없음)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/states/{{stateId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "states", "{{stateId}}"]
            }
          }
        },
        {
          "name": "State 수정 (버전 변경 없음)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"설명 수정\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/states/{{stateId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "states", "{{stateId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Version History",
      "item": [
        {
          "name": "모든 버전 조회",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/policies",
              "host": ["{{baseUrl}}"],
              "path": ["api", "policies"]
            }
          }
        },
        {
          "name": "최신 버전만 조회",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/policies?latestVersion=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "policies"],
              "query": [
                {
                  "key": "latestVersion",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "활성화된 Policy만",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/policies?onlyActive=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "policies"],
              "query": [
                {
                  "key": "onlyActive",
                  "value": "true"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}

